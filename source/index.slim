---
title: Baseline Grid
---




.container.cacl
    = partial "block/header"
    form#calculator.grid.calc__form name="calc"
        .calc__sectionHeader.grid-col.grid-col__1-of-1
            h3
                | Playable values
        .grid-col.grid-col__1-of-2
            .calc__item
                label for="objectHeight"
                    | Object height
                input#objectHeight name="objectHeight" type="number" pattern="[0-9]*" min="0" max="99999" maxlengt="5" size="6" value="297" autofocus="autofocus" requied="required"


        .grid-col.grid-col__1-of-2
            .calc__item
                label for="baseFontSize"
                    | Base font size
                input#baseFontSize name="baseFontSize" type="number" pattern="[0-9]*" min="0" max="99999" maxlengt="5" size="6" value="12" requied="required"
        .grid-col.grid-col__1-of-1
            .calc__item
                label for="ratio"
                    | Ratio
                select#ratio name="ratio"
                    option value="1.067"  15:16 – minor second
                    option value="1.125"  8:9 – major second
                    option value="1.2"  5:6 – minor third
                    option value="1.25"  4:5 – major third
                    option value="1.333"  3:4 – perfect fourth
                    option value="1.414"  1:√2 – aug. fourth / dim. fifth
                    option value="1.5"  2:3 – perfect fifth
                    option value="1.6"  5:8 – minor sixth
                    option selected="selected" value="1.618"  1:1.618 – golden section
                    option value="1.667"  3:5 – major sixth
                    option value="1.778"  9:16 – minor seventh
                    option value="1.875"  8:15 – major seventh
                    option value="2"  1:2 – octave
                    option value="2.5"  2:5 – major tenth
                    option value="2.667"  3:8 – major eleventh
                    option value="3"  1:3 – major twelfth
                    option value="4"  1:4 – double octave
        .calc__sectionHeader.calc__sectionHeader--output.grid-col.grid-col__1-of-1
            h3
                | Your new values
            .calc__copyAsMarkdown#copyAsMarkdown
                | Copy all as markdown?
        .grid-col.grid-col__1-of-2
            .calc__item.calc__item--output
                label for="newObjectHeight"
                    | New object height
                input name="newObjectHeight" type="number" readonly="readonly"
        .grid-col.grid-col__1-of-2
            .calc__item.calc__item--output
                label for="baseline"
                    | Baseline height
                input name="baseline" type="number" readonly="readonly"
        .grid-col.grid-col__1-of-2
            .calc__item.calc__item--output
                label for="baseline"
                    | # of baselines in the new object
                input name="numOfBaselines" type="number" readonly="readonly"
        .grid-col.grid-col__1-of-2
            .calc__item.calc__item--output
                label for="outsideMargin"
                    | Outside margin
                span.calc__checkbox
                    label for="moreMarginThanBaseline"
                        | Greater than or equal to baseline
                    input#moreMarginThanBaseline type="checkbox" name="moreMarginThanBaseline" checked="checked"
                input name="outsideMargin" type="number" readonly="readonly"
        .grid-col.grid-col__1-of-1
            .calc__item.calc__item--output
                label for="rows"
                    | Valid rows
                span.calc__checkbox
                    label for="takeCareOfRows"
                        | Take care of rows
                    input#takeCareOfRows type="checkbox" name="takeCareOfRows"
                .calc__box#rows tabIndex="1"


= partial "block/footer"
